@model VinylStoreMVC.Models.Sale
@{
    ViewData["Title"] = "Details";
    var recordQuantities = ViewBag.RecordQuantities as Dictionary<int, int>;
    var recordPrices = ViewBag.RecordPrices as Dictionary<int, int>;
}

<h1>Детали</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvoiceLink)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvoiceLink)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Records)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>Пластинка</th>
                        <th>Количество</th>
                        <th>Цена за штуку</th>
                        <th>Сумма</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in Model.Records)
                    {
                        var quantity = recordQuantities != null && recordQuantities.ContainsKey(record.Id)
                        ? recordQuantities[record.Id]
                        : 0;
                        var price = recordPrices != null && recordPrices.ContainsKey(record.Id)
                        ? recordPrices[record.Id]
                        : 0;
                        <tr>
                            <td>@record.Name (@record.Artist.Name)</td>
                            <td>@quantity</td>
                            <td>@price ₽</td>
                            <td>@(quantity* price) ₽</td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редактировать</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>